<%= flash[:errors] %>

<input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  
<label>
  Username
  <input type="text"
         name="user[username]"
         id="user_username",
         value="<%= user.username %>">
</label>
<br>
<label>
  Password
  <input type="password"
         name="user[password]"
         id="user_password">
</label>